package djuric;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesite broj redova: ");
		int x = sc.nextInt();
		
		System.out.println("Unesite broj kolona: ");
		int y = sc.nextInt();
		
		int a[][] = new int[x][y];
		
		System.out.println("Unesite elemente 2D niza: ");
		
		for(int i=0; i<x; i++) {
			for(int j=0; j<y; j++) {
				System.out.print("a[" + i + "," + j + "] = ");
				a[i][j] = sc.nextInt();
			}
		}
		System.out.println("Matrica izgleda ovako: ");
		for(int i=0; i<x; i++) {
			for(int j=0; j<y; j++) {
				System.out.print(a[i][j] + " ");
			}
			System.out.println();
		}
		
		System.out.println("Elementi sa parnim indeksima kolona su: ");
		for(int i=0; i<x; i++) {
			for(int j=0; j<y; j++) {
				if (y%2==0) {
					System.out.print(a[i][j] + " ");
				}
			}
		
		}

	}

}
