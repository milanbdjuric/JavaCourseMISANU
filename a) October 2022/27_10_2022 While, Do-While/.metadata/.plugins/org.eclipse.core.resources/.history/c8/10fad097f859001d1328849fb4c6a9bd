package wdjba;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesi vrednost za n: ");
		double n = sc.nextDouble();
		
		double s = 0;
		double i;
		
		for (i = 1; i <= n; i++) {
			s += i/Math.pow(2.0*i - 1.0, 2);
		}
		System.out.println("s = " + s);
		

	}
}
