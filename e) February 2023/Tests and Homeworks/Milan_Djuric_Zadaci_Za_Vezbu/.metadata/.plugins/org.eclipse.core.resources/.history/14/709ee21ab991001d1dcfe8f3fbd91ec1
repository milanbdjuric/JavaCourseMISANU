package djuric;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesite vrednost za n: ");
		int n = sc.nextInt();
		
		double p = 1;
		
		for (int i = 1; i <= n+1; i++) {
			p*=1 - 1/(i+1);
		}
		
		System.out.println("P = " + p);
		

	}

}
