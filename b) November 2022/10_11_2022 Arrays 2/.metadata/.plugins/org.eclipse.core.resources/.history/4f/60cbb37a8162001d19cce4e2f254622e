package djuric;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesite broj tacaka: ");
		int n = sc.nextInt();
		
		double x[] = new double [100];
		double y[] = new double [100];
		
		System.out.println("Unesite koordinate tacaka: ");
		
		for (int i=1; i<=n; i++) {
			System.out.print("x[" + i + "] = ");
			x[i] = sc.nextDouble();
			System.out.print("y[" + i + "] = ");
			y[i] = sc.nextDouble();
		}
		
		
		
		System.out.println("\tR.BR.\tX\tY\tOBLAST");
		
		for (int i=1; i<=n; i++) {
			double k1 = Math.pow(x[i]-1, 2) + Math.pow(y[i], 2);
			double k2 = Math.pow(x[i]-2, 2) + Math.pow(y[i], 2);
			if (k1 <= 1 && k2 <= 1) {
				System.out.println("\t" + i + "\t" + x[i] + "\t" + y[i] + "\t2");
			}
			if (k1 <= 1 && k2 > 1) {
				System.out.println("\t" + i + "\t" + x[i] + "\t" + y[i] + "\t1");
			}
			if (k1 > 1 && k2 <= 1) {
				System.out.println("\t" + i + "\t" + x[i] + "\t" + y[i] + "\t3");
			}
			if (k1 > 1 && k2 > 1) {
				System.out.println("\t" + i + "\t" + x[i] + "\t" + y[i] + "\t*");
			}
		
		
		}
		
	}
}



