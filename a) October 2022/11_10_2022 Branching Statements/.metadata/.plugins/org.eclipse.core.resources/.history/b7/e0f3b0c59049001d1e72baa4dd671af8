package milan.djuric;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner xyz = new Scanner(System.in);
		
		System.out.print("Unesite x: ");
		
		int x = xyz.nextInt();
		int y;
		
		if (x<0) {
			y = -5;
		}
		else if (x>=0 && x<1) {
			y = x + 2;
		}
		else if (x>=1 && x<5) {
			y = 3*x - 1;
		}
		else {
			y=2*x;
		}
		System.out.print("y je: " + y);
		xyz.close();
			
		
		
		

	}

}
