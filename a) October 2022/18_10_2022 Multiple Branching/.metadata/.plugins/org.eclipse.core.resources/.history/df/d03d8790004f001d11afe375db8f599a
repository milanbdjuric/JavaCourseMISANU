		if (slovo == 'a') {
			System.out.println("Moz vozis motor");
		}
		else if (slovo == 'b') {
			System.out.println("Moz vozis kola");
		}
		else if (slovo == 'c') {
			System.out.println("Moz vozis kamion");
		}
		else if (slovo == 'd') {
			System.out.println("Moz vozis bus");
		}
		else {
			System.out.println("Nisi ga dobro uno!");
		}
		
		sc.close();
		
