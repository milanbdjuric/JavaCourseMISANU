		System.out.print("Unesite vrednost za n: ");
		double n = sc.nextDouble();
		
		double x0 = (a+n-1)/n;
		
		double x1 = ((n-1)*x0+(a/Math.pow(x0, n-1)))/n;
		
		while(Math.abs(x1-x0)<=eps) {
			double x = Math.pow(a, 1/n);
			
	

			
			
			
		}
		


	}

}
