package djuric;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesite kategoriju: ");
		
		char slovo = sc.next().charAt(0);
		
		switch (slovo) {
		case 'a', 'A': {
			System.out.println("Moz vozis motore");
		}
		case 'b', 'B': {
			System.out.println("Moz vozis kola");
		}
		case 'c', 'C': {
			System.out.println("Moz vozis kamione");
		}
		case 'd', 'D': {
			System.out.println("Moz vozis buseve");
		}
		default: {
			System.out.println("Nepravilan unos!");
		}
		}

	}

}
