		String adresa = sc.nextLine();
		System.out.print("Naziv skole / firme: ");
		String nazivSF = sc.nextLine();
		System.out.print("Naziv odeljenja / razred: ");
		String nazivOR = sc.nextLine();
		
		Djak x = new Djak(ime, datumRodjenja, adresa, nazivSF, nazivOR);
		

	}

}
