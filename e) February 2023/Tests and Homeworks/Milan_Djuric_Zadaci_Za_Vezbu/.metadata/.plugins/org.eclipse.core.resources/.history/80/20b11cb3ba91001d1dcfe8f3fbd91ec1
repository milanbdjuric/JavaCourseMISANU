package djuric;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesite vrednost za n: ");
		int n = sc.nextInt();
		
		double p = 1;
		int i = 1;
		
		while(i<=n+1) {
			p *= (double)1-(1/(i+1));
			i++;
		}
		System.out.println("P = " + p);
	}

}
