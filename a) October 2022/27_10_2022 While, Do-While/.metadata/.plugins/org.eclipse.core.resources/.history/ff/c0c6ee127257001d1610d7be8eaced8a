package wdjba;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesite vrednost za n: ");
		double n = sc.nextDouble();
		
		double s = 0;
		double i = 1;
		
		while (i<=n) {
			s += 1 / Math.pow(3.0*i, 2.0);
			i++;
		}
		
		System.out.println("s = " + s);
		



		
	}

}
