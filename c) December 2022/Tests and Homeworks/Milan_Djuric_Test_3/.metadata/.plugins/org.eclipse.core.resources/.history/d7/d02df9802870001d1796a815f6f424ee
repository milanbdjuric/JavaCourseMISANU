package milan_djuric;

import java.util.Scanner;

public class Zadatak_3 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesite vrednost za n: ");
		int n = sc.nextInt();
		
		int x[][] = new int[n][n];
		
		for (int i=0; i<n; i++) {
			for (int j=0; j<n; j++)
				if (j+n>1)
					x[i][j] = 1;
				else
					x[i][j] = 0;
			}
		

		for (int i=0; i<n; i++) {
			for (int j=0; j<n; j++) {
				System.out.print(x[i][j]+" ");
			}
			System.out.println();
		}
		
// 02 11 20

	}

}
