package milan.djuric;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner xyz = new Scanner(System.in);
		
		System.out.print("Unesite x: ");
		
		double x = xyz.nextDouble();
		double y;
		
		if (x<0)
		{
			y = -1;
		}
		else if (x==0)
		{
			y = 0;
		}
		else
		{
			y=1;
		}
		System.out.print("y je: " + y);
		xyz.close();
			

	}

}