package djuric;

import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Unesite dan, mesec i godinu: ");
		
		int dan = sc.nextInt();
		int mesec = sc.nextInt();
		int godina = sc.nextInt();
		
		int sedmidan = dan + 7;
		
		switch (mesec) {
		case 1, 3, 5, 7, 8, 10, 12: {	
			
			if (sedmidan >= 31) {
				dan = sedmidan - 32;
				mesec++;
			}		
			else
				dan = sedmidan;
			}
			
		
		case 4, 6, 9, 11: {
			
			if (sedmidan > 30) {
				dan = sedmidan - 30;
				mesec++;
				}			
			else
				dan = sedmidan;
			}
			


		case 2: {
			if (sedmidan > 28) {
				dan = sedmidan - 28;
				mesec++;
				}
			else
				dan = sedmidan;
			}
			
		
			
		}

		
		System.out.print(dan + "." + mesec + "." + godina);

			
		}
		

	}


