package djuric;

import java.util.*;

public class Mejn {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		List<String> x = new ArrayList<String>();
		Iterator<String> i = x.iterator();
		
		System.out.println("Unesite dekadni broj: ");
		int n = sc.nextInt();
		
		while(n>1) {
			if(n%2==0)
				x.add("0");
			else
				x.add("1");
			n=n/2;
		}
		
		while(i.hasNext()) {
			System.out.print(i.next());
		}


	}

}
